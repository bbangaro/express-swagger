{
    "compilerOptions": {
        "esModuleInterop": true,
        "sourceMap": true,
        "lib": ["ES2020", "DOM", "esnext", "scripthost"],
        "jsx": "preserve",
        "declaration": true,
        "module": "esnext",
        "moduleResolution": "Node",
        "target": "es2016",
        "strict": true,
        "resolveJsonModule": true,
        // "baseUrl": "src",
        // "paths": {
        //     "@assets/*": ["assets/*"],
        //     "@hooks/*": ["hooks/*"],
        //     "@components/*": ["components/*"],
        //     "@layouts/*": ["layouts/*"],
        //     "@pages/*": ["pages/*"],
        //     "@utils/*": ["utils/*"],
        //     "@types/*": ["types/*"],
        //     "@typings/*": ["typings/*"],
        //     "@typeList/*": ["typeList/*"],
        //     "@datas/*": ["datas/*"],
        //     "@store/*": ["store/*"],
        //     "@styles/*": ["styles/*"],
        //     "@shared/*": ["shared/*"]
        // },
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "incremental": true,
        "isolatedModules": true
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
